{
  "database": {
    "rules": "database.rule.json"
  },
  "firestore": {
    "rules": "firestore.rule",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "function": "app"
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "functions": {
      "port": "5001"
    },
    "firestore": {
      "port": "8080"
    },
    "database": {
      "port": "9000"
    },
    "hosting": {
      "port": "5000"
    },
    "pubsub": {
      "port": "8085"
    }
  }
}
